.banner {
  margin-bottom: 20px;
  position: relative;
}

.banner-image {
  width: 100%;
  max-height: 180px;
  object-fit: cover;
}

.banner-intro {
  position: absolute;
  z-index: 1;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-weight: bold;
  font-size: 20px;
  width: 100%;
  text-align: center;
  text-transform: capitalize;
}

.card {
  padding: 20px;
  background: #fff;
  display: flex;
  margin-bottom: 10px;
  box-shadow: 0 2px 10px rgba(0,0,0,.10);
}

.card-image {
  width: 72px;
  height: 72px;
  object-fit: cover;
  border-radius: 50%;
  margin-right: 12px;
}

.card-info {
  max-width: 236px;
  font-size: 14px;
  margin-bottom: 8px;
}

.card .h2 {
  font-weight: bold;
  margin-bottom: 2px;
}

.card-icon {
  width: 12px;
  height: 12px;
}

.card-dt {
  margin-top: 4px;
}

.card-dt-item {
  display: inline;
  margin-right: 8px;
  font-size: 12px;
  color: #666;
  line-height: 1;
}