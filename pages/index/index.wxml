    <image src="/images/home-banner.jpg" class="slide-image" />
  </swiper-item>

  <swiper-item>
    <image src="/images/home-banner.jpg" class="slide-image" />
  </swiper-item>
</swiper>

<view class="h1">Browse classes by topic</view>

<view class="category">
