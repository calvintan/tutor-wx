/**index.wxss**/
.banner {
  margin-bottom: 20px;
  position: relative;
}

.banner-image {
  width: 100%;
  max-height: 180px;
  object-fit: cover;
}

.banner-intro {
  position: absolute;
  z-index: 1;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-weight: bold;
  font-size: 20px;
  width: 100%;
  text-align: center;
}

.intro {
  color: #fff;
  text-align: center;
}

.row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px; 
}

.card {
  background: #fff;
  width: calc((100% / 2) - 20px);
  border-radius: 4px;
  box-shadow: 0 2px 10px rgba(0,0,0,.10);
}

.card-image {
  width: 100%;
  height: 100px;
  object-fit: cover;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}

.card-name {
  text-align: center;
  padding: 5px 0 10px 0;
  font-size: 14px;
}
