/**index.wxss**/
.slider {
  margin-bottom: 20px;
}

.slide-image {
  width: 100%;
  height: 180px;
}

.h1 {
  font-size: 14px;
  font-weight: bold;
  padding: 0 10px;
  margin-bottom: 10px;
}

.row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.card {
  background: #fff;
  width: calc((100% / 2) - 20px);
  border-radius: 4px;
  box-shadow: 0 2px 10px rgba(0,0,0,.10);
}

.card-image {
  width: 100%;
  height: 100px;
  object-fit: cover;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}

.card-name {
  text-align: center;
  padding: 5px 0 10px 0;
  font-size: 14px;
}
