  <view class="box-wrapper">
    <view class="h2">Date and Time</view>
    <view class="p">{{service.time}}</view>

    <view class="h2">Location</view>
    <view class="p">{{service.location}}</view>
  </view>
  
  <view class="box-wrapper">
