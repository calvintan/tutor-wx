.banner {
  position: relative;
  height: 180px;
}

.banner-image {
  width: 100%;
  height: 180px;
  object-fit: cover;
}

.banner-intro {
  position: absolute;
  z-index: 1;
  left: 20px;
  bottom: 20px;
  font-weight: bold;
  font-size: 20px;
  text-transform: capitalize;
  color: #fff;
}

.banner-gradient {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, #000000 100%);
  opacity: 0.5;
}

.container {
  padding: 20px;
  background: #fff;
  font-size: 14px;
}

.box-wrapper {
  padding-top: 20px;
  margin-top: 20px;
  border-top: 1px solid #ddd;
}

.h2 {
  font-weight: bold;
  margin: 0 0 4px;
}

.p {
  margin-bottom: 20px;
}

.card {
  margin-top: 10px;
  display: flex;
}

.card-image {
  width: 72px;
  height: 72px;
  object-fit: cover;
  border-radius: 50%;
  margin-right: 12px;
}

.card-info {
  max-width: 236px;
  font-size: 14px;
  margin-bottom: 8px;
}

.card .h2 {
  font-weight: bold;
  margin-bottom: 2px;
}

.card-icon {
  width: 12px;
  height: 12px;
}